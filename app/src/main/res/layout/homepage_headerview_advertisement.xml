<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"/>

    <!-- Top -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <!-- left -->
        <RelativeLayout
            android:id="@+id/homepage_ad_top_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/homepage_ad_top_left_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立减放大招"
                    android:textColor="#F64D06"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/homepage_ad_top_left_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="浓情特惠"
                    android:textSize="11sp"/>

            </RelativeLayout>


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/homepage_ad_top_left_draweeview"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                fresco:placeholderImage="@drawable/default_homepage_image"/>

        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/line"/>

        <!-- right -->
        <RelativeLayout
            android:id="@+id/homepage_ad_top_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/homepage_ad_top_right_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大片上位"
                    android:textColor="#1F95F3"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/homepage_ad_top_right_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="优惠加成"
                    android:textSize="11sp"/>

            </RelativeLayout>


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/homepage_ad_top_right_draweeview"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                fresco:placeholderImage="@drawable/default_homepage_image"
                />

        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"/>

    <!-- Middle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <!-- left -->
        <RelativeLayout
            android:id="@+id/homepage_ad_middle_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/homepage_ad_middle_left_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="春光乍泄"
                    android:textColor="#FF7200"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/homepage_ad_middle_left_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="留下美好时光"
                    android:textSize="11sp"/>

            </RelativeLayout>


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/homepage_ad_middle_left_draweeview"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                fresco:placeholderImage="@drawable/default_homepage_image"/>

        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:background="@color/line"/>

        <!-- right -->
        <RelativeLayout
            android:id="@+id/homepage_ad_middle_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/homepage_ad_middle_right_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="吃货天堂"
                    android:textColor="#2CC8DC"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/homepage_ad_middle_right_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="味蕾大全"
                    android:textSize="11sp"/>

            </RelativeLayout>


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/homepage_ad_middle_right_draweeview"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                fresco:placeholderImage="@drawable/default_homepage_image"/>

        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"/>

    <!-- Bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <!-- left -->
        <LinearLayout
            android:id="@+id/homepage_ad_bottom_left"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/homepage_ad_bottom_left_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="春暖花开"
                android:textColor="#B978DC"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/homepage_ad_bottom_left_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="你该运动了"
                android:textSize="11sp"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/homepage_ad_bottom_left_draweeview"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                fresco:placeholderImage="@drawable/default_homepage_image"/>


        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/line"/>

        <!-- middle -->
        <LinearLayout
            android:id="@+id/homepage_ad_bottom_middle"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/homepage_ad_bottom_middle_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="想嗨就嗨"
                android:textColor="#84E046"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/homepage_ad_bottom_middle_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="释放激情"
                android:textSize="11sp"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/homepage_ad_bottom_middle_draweeview"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                fresco:placeholderImage="@drawable/default_homepage_image"/>


        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/line"/>

        <!-- right -->
        <LinearLayout
            android:id="@+id/homepage_ad_bottom_right"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/homepage_ad_bottom_right_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="成就完美"
                android:textColor="#FBB622"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/homepage_ad_bottom_right_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="让您重回18岁"
                android:textSize="11sp"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/homepage_ad_bottom_right_draweeview"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                fresco:placeholderImage="@drawable/default_homepage_image"/>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>