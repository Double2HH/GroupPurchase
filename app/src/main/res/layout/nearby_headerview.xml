<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="#F7F7F7"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/nearby_headerview_location_icon"
        android:layout_width="24dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:src="@drawable/icon_nearby_location"/>


    <ImageView
        android:id="@+id/nearby_headerview_refresh"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/imageview_button_selector"
        android:src="@drawable/icon_nearby_refresh"/>

    <View
        android:id="@+id/neardy_headerview_line"
        android:layout_width="1dp"
        android:layout_height="28dp"
        android:layout_toStartOf="@id/nearby_headerview_refresh"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:background="@color/line"/>


    <TextView
        android:id="@+id/nearby_headerview_location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/nearby_headerview_location_icon"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/neardy_headerview_line"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:text="位置加载中..."
        android:lines="1"
        android:textColor="#868686"/>

</RelativeLayout>