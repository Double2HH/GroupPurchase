<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:background="@color/white">

    <android.support.v4.view.ViewPager
        android:id="@+id/homepage_banner_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <www.huangheng.site.grouppurchase.custom.view.Indicator
        android:id="@+id/homepage_banner_indicator"
        android:layout_width="100dp"
        android:layout_height="12dp"
        android:layout_alignBottom="@id/homepage_banner_viewpager"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        custom:indicator_backcolor="@color/indicator_back"
        custom:indicator_forecolor="@color/colorApplication"
        custom:indicator_number="4"
        custom:indicator_radius="8"/>

</RelativeLayout>